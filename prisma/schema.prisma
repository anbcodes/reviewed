// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  url      = "file:./data.db"
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String        @id @unique @default(uuid())
  name        String
  created     DateTime      @default(now())
  lastPosted  DateTime?
  review      Review?       @relation(fields: [reviewId], references: [id])
  reviewId    String?
  sessions    Session[]
  posts       Post[]
  sensitive   UserSensitive @relation(fields: [sensitiveId], references: [id])
  sensitiveId String        @unique
}

model Review {
  id        String @id @unique @default(uuid())
  reviewers User[]

  approve   Int @default(0)
  disaprove Int @default(0)

  post   Post   @relation(fields: [postId], references: [id])
  postId String @unique
}

model UserSensitive {
  id    String @id @unique @default(uuid())
  email String @unique
  hash  String
  user  User?
}

model Session {
  id         String   @id @unique @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  lastActive DateTime @default(now())
  userId     String
}

model Post {
  id      String   @id @unique @default(uuid())
  content String
  created DateTime @default(now())
  updated DateTime @updatedAt

  author   User    @relation(fields: [authorId], references: [id])
  authorId String
  parent   Post?   @relation(name: "post", fields: [parentId], references: [id])
  parentId String?
  children Post[]  @relation("post")

  review Review?
}
